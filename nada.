            });
        }
        
        // --- AUTENTICA√á√ÉO E FLUXO DE ONBOARDING ---
        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                const userProfileRef = ref(db, 'users/' + user.uid);
                onValue(userProfileRef, (snapshot) => {
                    const profileData = snapshot.val();
                    if (!authReady) finishInitialLoad();
                    
                    if (!profileData || !profileData.username) {
                        showScreen('onboarding-username-overlay');
                    } else {
                        userProfileData = profileData;
                        showScreen('appContent');
                        updateProfileUI();
                        if (activePage === 'chat' && !chatHistoryLoaded) {
                            loadChatHistory();
                        }
                    }
                });
            } else {
                currentUser = null; userProfileData = null;
                showScreen('loginOverlay');
                finishInitialLoad();
            }
        });

        function finishInitialLoad() {
            if (authReady) return;
            authReady = true;
            const loader = document.getElementById('initial-loading-overlay');
            loader.classList.add('animate-fadeOut');
            setTimeout(() => loader.classList.add('hidden'), 400);
        }

        function showScreen(elementId) {
            document.querySelectorAll('.screen').forEach(el => {
                if (el.id !== 'initial-loading-overlay') {
                    el.classList.add('hidden', 'opacity-0');
                }
            });
            const targetEl = document.getElementById(elementId);
            if (targetEl) {
                targetEl.classList.remove('hidden');
                setTimeout(() => targetEl.classList.remove('opacity-0'), 50);
            }
        }

        async function handleUsernameSubmit() {
            const username = document.getElementById('usernameInput').value.trim();
            if (!/^[a-zA-Z0-9_]{3,20}$/.test(username)) { showToast("Nome de usu√°rio inv√°lido.", "error"); return; }
            const initialProfile = { 
                username, 
                avatarId: 0, // Avatar Padr√£o
                email: currentUser.email, 
                createdAt: serverTimestamp() 
            };
            await set(ref(db, `users/${currentUser.uid}`), initialProfile);
        }

        function loginWithGoogle() {
            const btn = document.getElementById('loginWithGoogle'); btn.disabled = true;
            signInWithPopup(auth, provider)
                .catch(() => document.getElementById('auth-error-message').textContent = "Ocorreu um erro no login.")
                .finally(() => { btn.disabled = false; });
        };
        
        function logoutUser() { document.getElementById('appContent').classList.add('animate-fadeOut'); setTimeout(() => signOut(auth), 300); };
        
        function toggleUsernameEdit(isEditing) {
            document.getElementById('profile-display').classList.toggle('hidden', isEditing);
            document.getElementById('profile-edit').classList.toggle('hidden', !isEditing);
            if(isEditing) document.getElementById('edit-username-input').value = userProfileData.username;
        }

        async function saveUsername() {
            const newUsername = document.getElementById('edit-username-input').value.trim();
            if (!/^[a-zA-Z0-9_]{3,20}$/.test(newUsername)) { showToast("Nome de usu√°rio inv√°lido.", "error"); return; }
            await update(ref(db, `users/${currentUser.uid}`), { username: newUsername });
            toggleUsernameEdit(false);
            showToast("Nome de usu√°rio atualizado!", "success");
        }
        
        // --- FUN√á√ïES DE √ÅUDIO ---
        function initAudio() { if (!audioContext) audioContext = new (window.AudioContext || window.webkitAudioContext)(); }
        
        function playSound(type) {
            if (!audioContext) return;
            const osc = audioContext.createOscillator(); const gain = audioContext.createGain();
            osc.connect(gain); gain.connect(audioContext.destination);
            gain.gain.setValueAtTime(0, audioContext.currentTime);
            gain.gain.linearRampToValueAtTime(0.3, audioContext.currentTime + 0.01);
            if (type === 'correct') { osc.type = 'triangle'; osc.frequency.setValueAtTime(523.25, audioContext.currentTime); setTimeout(() => osc.frequency.setValueAtTime(783.99, audioContext.currentTime + 0.1), 100); } 
            else if (type === 'incorrect') { osc.type = 'square'; osc.frequency.setValueAtTime(200, audioContext.currentTime); setTimeout(() => osc.frequency.setValueAtTime(150, audioContext.currentTime + 0.1), 100); }
            else if (type === 'session_start') { osc.type = 'sine'; osc.frequency.setValueAtTime(440, audioContext.currentTime); }
            osc.start(audioContext.currentTime);
            gain.gain.exponentialRampToValueAtTime(0.00001, audioContext.currentTime + 0.3);
            osc.stop(audioContext.currentTime + 0.3);
        }

