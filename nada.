        function navigateTo(pageId) {
            if (activePage === pageId) return;
            document.getElementById(`page-${activePage}`).classList.remove('active');
            document.getElementById(`page-${pageId}`).classList.add('active');
            document.getElementById('newChatBtn').style.display = (pageId === 'chat') ? 'flex' : 'none';
            activePage = pageId;
            if (pageId === 'jobs') renderJobs();
            if (pageId === 'chat' && !chatHistoryLoaded) loadChatHistory();
        }
        function toggleMenu() {
            const sideMenu = document.getElementById('sideMenu');
            const overlay = document.getElementById('sideMenuOverlay');
            const isHidden = sideMenu.classList.contains('hidden');
            sideMenu.classList.toggle('hidden', !isHidden); 
            overlay.classList.toggle('hidden', !isHidden);
            setTimeout(() => sideMenu.style.transform = isHidden ? 'translateX(0)' : 'translateX(-100%)', 10);
        };
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            const bgColor = type === 'success' ? 'bg-green-500' : (type === 'error' ? 'bg-red-500' : 'bg-gray-800');
            toast.className = `animate-fadeIn fixed top-20 left-1/2 -translate-x-1/2 ${bgColor} text-white px-4 py-2 rounded-lg text-sm z-[999] shadow-lg`;
            toast.textContent = message;
            document.body.appendChild(toast);
            setTimeout(() => { toast.classList.add('animate-fadeOut'); toast.addEventListener('animationend', () => toast.remove()); }, 3000);
        }
        function updateProfileUI() { if (!userProfileData || !currentUser) return; setAvatar('userAvatar', userProfileData.avatarId); setAvatar('profileAvatar', userProfileData.avatarId); document.getElementById('profileName').textContent = userProfileData.username || 'Usu√°rio'; }
        
        function setAvatar(elId, avatarId = 0) {
            const el = document.getElementById(elId);
            if (!el) return;
            const row = Math.floor(avatarId / 4), col = avatarId % 4;
            const xPos = col * (100 / 3), yPos = row * (100 / 3);
            el.style.backgroundImage = "url('avatar.png')";
            el.style.backgroundSize = "400% 400%";
            el.style.backgroundPosition = `${xPos}% ${yPos}%`;
        }
        function cleanAIResponse(rawText) {
            const finalAnswerMarker = 'assistantfinal';
            const markerIndex = rawText.lastIndexOf(finalAnswerMarker);
            return (markerIndex !== -1) ? rawText.substring(markerIndex + finalAnswerMarker.length).trim() : rawText;
        }
        
        // --- API & PROCESSAMENTO DE ARQUIVOS ---
        async function getAIResponse(apiUrl, apiKey, model, messages, isGemini = false) {
            if(isGemini) {
                const response = await fetch(apiUrl, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ contents: messages }) });
                if (!response.ok) throw new Error(`API Error: ${response.status}`);
                const json = await response.json();
                if (!json.candidates || !json.candidates[0].content.parts) throw new Error("Invalid Gemini response");
                return json.candidates[0].content.parts[0].text; // Assume texto para chat/pdf
            } else {
                 const response = await fetch(apiUrl, { method: 'POST', headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${atob(apiKey)}` }, body: JSON.stringify({ model, messages, temperature: 0.8 }) });
                if (!response.ok) throw new Error(`API Error: ${response.status}`);
                const json = await response.json();
                if (!json.choices || json.choices.length === 0) throw new Error("Invalid API response");
                return json.choices[0].message.content;
            }
        }
        async function getStructuredAIResponse(prompt, content) { const messages = [{ role: "system", content: "Voc√™ responde APENAS com o objeto JSON solicitado, sem nenhum texto adicional, explica√ß√£o ou markdown." }, { role: "user", content: content ? `${prompt}\n\n${content}` : prompt }]; const rawText = await getAIResponse(API_URL_CHAT, OBFUSCATED_KEY_CHAT, "gpt-3.5-turbo", messages); try { const jsonMatch = rawText.match(/\{[\s\S]*\}/) || rawText.match(/\[[\s\S]*\]/); if (!jsonMatch) throw new Error("No JSON found."); return JSON.parse(jsonMatch[0]); } catch (e) { throw new Error("Failed to parse JSON."); } }
        async function handleFileUpload(event) { const file = event.target.files[0]; if (!file) return; event.target.value = ''; const jobRef = push(ref(db, `jobs/${currentUser.uid}`)); const job = { status: 'processing', progress: 10, createdAt: serverTimestamp(), type: 'exercise' }; await set(jobRef, job); navigateTo('jobs'); try { let extractedText = ''; await update(jobRef, { progress: 20 }); const worker = await Tesseract.createWorker('por'); await worker.recognize(file); const { data: { text } } = await worker.recognize(file); extractedText = text; await worker.terminate(); await update(jobRef, { progress: 50 }); const prompt = "Analise a quest√£o e retorne um JSON com 'question', 'answer' (HTML), e 'type'."; const data = await getStructuredAIResponse(prompt, extractedText); await update(jobRef, { ...data, status: 'completed', progress: 100 }); } catch (error) { await update(jobRef, { status: 'failed', progress: 100, error: error.message }); } }
        
        // --- L√ìGICA DE PDF ---
        async function generatePdfFromPrompt() { const topic = prompt("Sobre qual t√≥pico voc√™ quer o PDF?"); if (!topic || topic.trim() === "") return; const jobRef = push(ref(db, `jobs/${currentUser.uid}`)); const job = { status: 'processing', progress: 10, type: 'pdf', question: `PDF sobre: ${topic}`, createdAt: serverTimestamp() }; await set(jobRef, job); navigateTo('jobs'); const pdfPrompt = `Aja como um escritor acad√™mico. Escreva um ensaio bem estruturado sobre: "${topic}". Crie um texto com introdu√ß√£o, desenvolvimento e conclus√£o. N√ÉO use formato de pergunta e resposta.`; try { const rawText = await getAIResponse(API_URL_CHAT, OBFUSCATED_KEY_CHAT, "deepseek-chat", [{ role: "user", content: pdfPrompt }]); const cleanedText = cleanAIResponse(rawText); await update(jobRef, { status: 'completed', progress: 100, answer: markdownToHtml(cleanedText), rawAnswer: cleanedText, resultType: 'pdf' }); } catch (error) { await update(jobRef, { status: 'failed', progress: 100, error: error.message }); } }
        function openPdfEditor(button) { const jobData = JSON.parse(button.dataset.job); const modal = document.getElementById('pdf-editor-modal'); const textarea = document.getElementById('pdf-editor-textarea'); modal.querySelector('h3').textContent = `Editar: ${jobData.question}`; textarea.value = jobData.rawAnswer || ""; downloadBtn.dataset.topic = jobData.question; modal.classList.remove('hidden'); }
        async function generateAndDownloadPdf() { const textarea = document.getElementById('pdf-editor-textarea'); const text = textarea.value; const topic = document.getElementById('pdf-download-btn').dataset.topic || "documento"; const pdfDoc = await PDFDocument.create(); const page = pdfDoc.addPage(); const font = await pdfDoc.embedFont(StandardFonts.Helvetica); page.drawText(text, { x: 50, y: page.getHeight() - 50, font, size: 12, lineHeight: 15, maxWidth: page.getWidth() - 100 }); const pdfBytes = await pdfDoc.save(); const blob = new Blob([pdfBytes], { type: 'application/pdf' }); const link = document.createElement('a'); link.href = URL.createObjectURL(blob); link.download = `${topic.replace(/[^a-z0-9]/gi, '_')}.pdf`; link.click(); document.getElementById('pdf-editor-modal').classList.add('hidden'); }
        
        // --- L√ìGICA DE TRABALHOS ---
        function renderJobs() { const list = document.getElementById('jobs-list'); const jobsRef = query(ref(db, `jobs/${currentUser.uid}`), orderByChild('createdAt')); onValue(jobsRef, (snapshot) => { list.innerHTML = ''; const jobs = []; snapshot.forEach(child => { jobs.unshift({ id: child.key, ...child.val() }); }); if (jobs.length === 0) { list.innerHTML = '<p class="text-center text-gray-500 py-8">Nenhum trabalho encontrado.</p>'; return; } jobs.forEach(job => { const el = document.createElement('div'); el.className = 'bg-white p-4 rounded-lg shadow-sm overflow-hidden'; let buttons = `<button data-job-id="${job.id}" class="job-toggle-btn text-sm text-primary">Ver Detalhes</button>`; if (job.resultType === 'pdf') buttons += `<button data-job='${JSON.stringify(job)}' class="job-edit-pdf-btn text-sm bg-primary text-white px-3 py-1 rounded-md ml-2">Editar</button>`; el.innerHTML = `<div class="flex justify-between items-center"><p class="font-bold text-gray-700 break-all">${job.question||'Trabalho'}</p><span class="text-xs px-2 py-1 rounded-full whitespace-nowrap ml-2 ${job.status==='completed'?'bg-green-100 text-green-700':(job.status==='failed'?'bg-red-100 text-red-700':'bg-blue-100 text-blue-700')}">${job.status}</span></div>${job.status==='processing'?`<div class="w-full bg-gray-200 h-2 mt-2"><div class="bg-primary h-2" style="width:${job.progress||0}%"></div></div>`:''}<div class="mt-4 pt-4 border-t hidden break-words" id="job-result-${job.id}"><div class="prose prose-sm max-w-full">${job.answer||(job.error||'Sem detalhes.')}</div></div><div class="mt-4 text-right">${buttons}</div>`; list.appendChild(el); }); }); }
        function toggleJobDetails(button) { const resultDiv = document.getElementById(`job-result-${button.dataset.jobId}`); const isHidden = resultDiv.classList.contains('hidden'); resultDiv.classList.toggle('hidden'); button.textContent = isHidden ? "Ocultar" : "Ver Detalhes"; }
        
        // --- CHAT E EDI√á√ÉO DE IMAGEM ---
        async function startNewChat() { if (!currentUser) return; if(confirm("Deseja iniciar uma nova conversa? O hist√≥rico atual ser√° apagado.")) { await remove(ref(db, `chats/${currentUser.uid}`)); chatHistory = []; loadChatHistory(); showToast("Nova conversa iniciada.", "success"); }}
        async function loadChatHistory() { const messagesContainer = document.getElementById('chat-messages'); messagesContainer.innerHTML = ''; chatHistory = []; const chatRef = query(ref(db, `chats/${currentUser.uid}`), orderByChild('timestamp')); const snapshot = await get(chatRef); if (snapshot.exists()) { snapshot.forEach(child => { const msg = child.val(); chatHistory.push(msg); addMessageToChat(msg.role, msg.content, msg.type); }); } chatHistoryLoaded = true; }
        
        async function sendChatMessage() {
            const input = document.getElementById('chat-input');
            let messageText = input.value.trim();
            if (!messageText && !imageToSend) return;

            if (imageToSend) {
                if (!(await checkImageEditLimit())) {
                    imageToSend = null; document.getElementById('image-preview-container').classList.add('hidden'); input.value = '';
                    return;
                }
            }
            
            input.value = '';
            addMessageToChat('user', messageText, imageToSend ? 'image_prompt' : 'text');
            
            const messageParts = [{ "text": messageText }];
            let userContentForDB = messageText;

            if (imageToSend) {
                messageParts.unshift({ "inline_data": { "mime_type": imageToSend.mimeType, "data": imageToSend.base64 } });
                
                // Salvar imagem no Storage
                const imagePath = `chats/${currentUser.uid}/${Date.now()}.png`;
                const imageRef = storageRef(storage, imagePath);
                const uploadResult = await uploadString(imageRef, `data:${imageToSend.mimeType};base64,${imageToSend.base64}`, 'data_url');
                userContentForDB = await getDownloadURL(uploadResult.ref); // Salvar URL no DB
            }

            const userMessage = { role: "user", content: userContentForDB, type: imageToSend ? 'image_prompt' : 'text', timestamp: serverTimestamp() };
            chatHistory.push(userMessage); push(ref(db, `chats/${currentUser.uid}`), userMessage);

            imageToSend = null;
            document.getElementById('image-preview-container').classList.add('hidden');
            addMessageToChat('assistant', null);

            try {
                let responseText;
                if (messageParts.length > 1) { // Imagem e texto
                    const response = await fetch(API_URL_GEMINI, { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ contents: [{ parts: messageParts }] }) });
                    const data = await response.json();
                    if (!data.candidates) throw new Error(data.error?.message || "Erro na API Gemini.");
                    const aiImageBase64 = data.candidates[0].content.parts[0].inline_data.data;
                    const aiImageMimeType = data.candidates[0].content.parts[0].inline_data.mime_type;

                    const aiImagePath = `chats/${currentUser.uid}/${Date.now()}_edited.png`;
                    const aiImageRef = storageRef(storage, aiImagePath);
                    await uploadString(aiImageRef, `data:${aiImageMimeType};base64,${aiImageBase64}`, 'data_url');
                    responseText = await getDownloadURL(aiImageRef); // Salva URL da imagem editada

                    await incrementImageEditCount(); // Incrementa o contador de edi√ß√£o
                    
                    const assistantMessage = { role: "assistant", content: responseText, type: 'image_edited', timestamp: serverTimestamp() };
                    chatHistory.push(assistantMessage); push(ref(db, `chats/${currentUser.uid}`), assistantMessage);
                    updateLastMessage(responseText, 'image_edited');
                } else { // Apenas texto
                    const messagesForAPI = [{ role: "system", content: JINOCA_SYSTEM_PROMPT }, ...chatHistory.map(m=>({role: m.role, content: m.content}))];
                    responseText = await getAIResponse(API_URL_CHAT, OBFUSCATED_KEY_CHAT, "deepseek-chat", messagesForAPI);
                    const cleanedText = cleanAIResponse(responseText);
                    
                    const assistantMessage = { role: "assistant", content: cleanedText, type: 'text', timestamp: serverTimestamp() };
                    chatHistory.push(assistantMessage); push(ref(db, `chats/${currentUser.uid}`), assistantMessage);
                    updateLastMessage(cleanedText, 'text');
                }
            } catch (error) { updateLastMessage("Oops, deu algo errado... Tente de novo. üòµ‚Äçüí´", 'text'); }
        }

        async function checkImageEditLimit() {
            const today = new Date().toISOString().slice(0, 10);
            const lastEditDate = userProfileData.lastImageEditDate;
            let count = userProfileData.imageEditCount || 0;
            
            if (today !== lastEditDate) {
                count = 0; // Reseta o contador para o novo dia
            }
            
            if (count >= 2) {
                showToast("Voc√™ atingiu seu limite di√°rio de 2 edi√ß√µes de imagem.", "error");
                return false;
            }
            return true;
        }

        async function incrementImageEditCount() {
            const today = new Date().toISOString().slice(0, 10);
            let count = (userProfileData.lastImageEditDate === today) ? (userProfileData.imageEditCount || 0) + 1 : 1;
            await update(ref(db, `users/${currentUser.uid}`), {
                imageEditCount: count,
                lastImageEditDate: today
            });
        }

        function handleImageSelectionForChat(event) {
            const file = event.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (e) => {
                const base64 = e.target.result.split(',')[1];
                imageToSend = { base64, mimeType: file.type };
                document.getElementById('image-preview-container').innerHTML = `<div class="relative inline-block"><img src="${e.target.result}" class="h-16 w-16 object-cover rounded-lg"><button id="remove-image-btn" class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center">&times;</button></div>`;
                document.getElementById('image-preview-container').classList.remove('hidden');
                document.getElementById('remove-image-btn').addEventListener('click', () => {
                    imageToSend = null;
                    document.getElementById('image-preview-container').classList.add('hidden');
                });
            };
            reader.readAsDataURL(file);
        }
        function addMessageToChat(role, content, type = 'text') {
            const container = document.getElementById('chat-messages');
            const msgDiv = document.createElement('div');
            msgDiv.className = `flex items-end gap-2 ${role === 'user' ? 'justify-end' : 'justify-start'}`;
            let htmlContent = '';
            
            const newMascot = `<svg class="w-8 h-8 rounded-full order-1 flex-shrink-0" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="50" cy="50" r="50" fill="#6366f1"/><path d="M66.6667 70.8333C66.6667 61.6423 59.1911 54.1667 50 54.1667C40.8089 54.1667 33.3333 61.6423 33.3333 70.8333" stroke="white" stroke-width="5" stroke-linecap="round"/><circle cx="37.5" cy="41.6667" r="6.25" fill="white"/><circle cx="62.5" cy="41.6667" r="6.25" fill="white"/></svg>`;

            if (role === 'assistant') htmlContent += newMascot;
            
            const messageBubble = document.createElement('div');
            messageBubble.className = "p-3 rounded-2xl max-w-xs";
            messageBubble.classList.add(role === 'user' ? 'bg-primary' : 'bg-gray-200', role === 'user' ? 'text-white' : 'text-gray-800');
            
            if (content === null) {
                messageBubble.id = "last-ai-message";
                messageBubble.innerHTML = `<div class="flex space-x-1"><div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce"></div><div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce [animation-delay:0.2s]"></div><div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce [animation-delay:0.4s]"></div></div>`;
            } else if (type === 'image_edited') {
                messageBubble.innerHTML = `<p class="mb-2 text-sm">Aqui est√° sua imagem editada:</p><img src="${content}" class="rounded-lg"><a href="${content}" download="imagem_editada.png" class="mt-2 inline-block bg-green-500 text-white text-xs px-3 py-1 rounded-full">Baixar Imagem</a>`;
            } else if (type === 'image_prompt') {
                messageBubble.innerHTML = `<img src="${content}" class="rounded-lg">`;
            } else {
                messageBubble.innerHTML = markdownToHtml(content);
            }
            msgDiv.appendChild(messageBubble);
            container.appendChild(msgDiv);
            container.scrollTop = container.scrollHeight;
        }
        function updateLastMessage(content, type = 'text') { const lastMessage = document.getElementById('last-ai-message'); if (lastMessage) { if(type === 'image_edited') { lastMessage.innerHTML = `<p class="mb-2 text-sm">Aqui est√° sua imagem editada:</p><img src="${content}" class="rounded-lg"><a href="${content}" download="imagem_editada.png" class="mt-2 inline-block bg-green-500 text-white text-xs px-3 py-1 rounded-full">Baixar Imagem</a>`; } else { lastMessage.innerHTML = markdownToHtml(content); } lastMessage.id = ''; } }
        
        // --- UTILIT√ÅRIOS ---
        function markdownToHtml(text) { if (!text) return ''; return text.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>').replace(/\*(.*?)\*/g, '<em>$1</em>').replace(/`([^`]+)`/g, '<code class="bg-gray-200 text-sm rounded px-1 py-0.5">`$1`</code>').replace(/\n/g, '<br>'); }
        function setupOnboardingAvatars() { const c = document.getElementById('avatar-selection'); if (!c) return; c.innerHTML = ''; for (let i = 0; i < 16; i++) { const a = document.createElement('div'); a.className = `w-16 h-16 rounded-full border-4 border-transparent cursor-pointer bg-no-repeat avatar-option ${i === 0 ? 'avatar-selected' : ''}`; a.style.backgroundPosition = `${(i % 4) * (100 / 3)}% ${Math.floor(i / 4) * (100 / 3)}%`; a.dataset.avatarId = i; c.appendChild(a); a.addEventListener('click', () => { c.querySelector('.avatar-selected')?.classList.remove('avatar-selected'); a.classList.add('avatar-selected'); }); } }
    </script>
</body>
</html>
